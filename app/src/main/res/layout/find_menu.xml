<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Trade Cards"
        android:id="@+id/findHeader"
        android:layout_row="4"
        android:layout_column="10"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Total 1 : $0.00"
            android:id="@+id/totalButton1"
            android:layout_column="30"
            android:layout_gravity="left|top"
            android:layout_marginLeft="25dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Total 2 : $0.00"
            android:id="@+id/totalButton2"
            android:layout_column="30"
            android:layout_gravity="right|top"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="# items"
            android:id="@+id/itemCount1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="# items"
            android:id="@+id/itemCount2"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

    <EditText
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:id="@+id/searchBox"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:hint="Search for Card"
        android:autoText="false"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="### cards matching"
        android:id="@+id/cardCountText"
        android:layout_gravity="center_horizontal" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView"
        android:layout_weight="0.26">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="222dp"
                    android:id="@+id/cardImage1"
                    android:src="@drawable/cardback" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Price : $0.00"
                    android:id="@+id/priceText1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Set : "
                    android:id="@+id/setText1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="222dp"
                    android:id="@+id/imageView4"
                    android:src="@drawable/cardback" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Price : $0.00"
                    android:id="@+id/textView8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Set : DTK"
                    android:id="@+id/textView7" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="222dp"
                    android:id="@+id/imageView3"
                    android:src="@drawable/cardback" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Price : $0.00"
                    android:id="@+id/textView10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Set : DTK"
                    android:id="@+id/textView9" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="222dp"
                    android:id="@+id/imageView"
                    android:src="@drawable/cardback" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Price : $0.00"
                    android:id="@+id/textView12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Set : DTK"
                    android:id="@+id/textView11" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="110dp">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="222dp"
                    android:id="@+id/imageView2"
                    android:src="@drawable/cardback" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Set : DTK"
                    android:id="@+id/textView13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Price : $0.00"
                    android:id="@+id/textView14" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.07"
        android:weightSum="1"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Clear All"
            android:id="@+id/clearAllButton"
            android:layout_weight="0.30"
            android:layout_marginLeft="5dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/saveButton"
            android:layout_weight="0.34" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="History"
            android:id="@+id/historyButton"
            android:layout_weight="0.22" />

    </LinearLayout>

</LinearLayout>